<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_margin"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">
    <TextView
        android:id="@+id/movie_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_size_tip"
        android:textColor="@android:color/tertiary_text_light"/>
    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left"
        android:textSize="@dimen/text_size_title_big"
        android:textColor="@android:color/primary_text_light"/>
    <TextView
        android:id="@+id/movie_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/text_size_secondary"
        android:textColor="@android:color/tertiary_text_light"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/bg_feeds_movie">
        <ImageView
            android:id="@+id/movie_pic"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <TextView
        android:id="@+id/movie_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textSize="@dimen/text_size_secondary"
        android:textColor="@android:color/tertiary_text_light"/>
    <TextView
        android:id="@+id/movie_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="12dp"
        android:paddingRight="12dp"
        android:textSize="@dimen/text_size_tip"
        android:textColor="@android:color/tertiary_text_light"/>
    <include layout="@layout/item_footer" />
</LinearLayout>